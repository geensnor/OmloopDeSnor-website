---
import Footer from "../components/Footer.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Site van de tourtocht voor liefhebbers.">
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    {
      import.meta.env.PROD && (
        <script
          async
          defer
          data-website-id="6d4b7ebb-94da-48b9-a5b6-f4836fdf23ac"
          src="https://umami-geensnor.vercel.app/umami.js"
        />
      )
    }
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@500&family=Roboto+Slab&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Work+Sans&display=swap" rel="stylesheet">
  </head>

  <title>{title}</title>

  <div class="container mx-auto px-4 mb-8">
    <slot />
  </div>
  <Footer />


</html>
