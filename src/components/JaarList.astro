---
import { getCollection } from "astro:content";

const allEdities = await getCollection("edities");
allEdities.sort((a, b) => parseFloat(a.id) - parseFloat(b.id));

const jaren = allEdities.map(function (element) {
  return new Date(element.data.datum).getFullYear();
});
---

<div class="text-center m-8">
  <h2 class="text-center text-4xl font-semibold text-orange-600 font-slab">
    Eerdere edities
  </h2>
  <ul class="list-none">
    {
      jaren.map((jaar) => (
        <li class="inline-block text-blue-600 hover:underline p-2">
          <a href={`#jaar${jaar}`}>{jaar}</a>
        </li>
      ))
    }
  </ul>
</div>
